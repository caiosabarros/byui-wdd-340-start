    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>

            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <!--Contain a form for editting a new vehicle to the inventory table.-->
                    <form id="updateAccountForm" action="/account/update" method="post">
                        <fieldset>
                            <legend>Account Update</legend>
                            <label for="account_firstname"><strong>Inventory Make</strong></label>
                            <input type="text" name="account_firstname" id="accountFirstnameUpdate" required
                                value="<%= locals.accountData.account_firstname %>">
                            <label for="account_lastname"><strong>Inventory Make</strong></label>
                            <input type="text" name="account_lastname" id="accountLastnameUpdate" required
                                value="<%= locals.accountData.account_lastname %>">
                            <label for="account_email"><strong>Inventory Make</strong></label>
                            <input type="email" name="account_email" id="accountEmailUpdate" required
                                value="<%= locals.accountData.account_email %>">
                            <input type="hidden" value="<%= locals.accountData.account_id %>" />
                            <input id="updateAccountSubmit" type="submit" value="Update Account" />
                        </fieldset>
                        <fieldset>
                            <legend>Change Password</legend>
                            <label for="account_password">Password</label>
                            <small id="invalidInputUpdate">There must be at least 12 characters, one must be a number,
                                one
                                must
                                be a
                                lowercase letter, one must be a capital letter, and one must be a non-alphanumeric
                                character.</small>
                            <input required name="account_password"
                                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                                type="password" minlength="12">
                            <input id="updatePasswordSubmit" type="submit" value="Change Password" />
                        </fieldset>
                    </form>
